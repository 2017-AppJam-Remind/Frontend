<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_upload"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="40"
    android:orientation="vertical"
    tools:context="com.example.parktaejun.remind.InfoActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_weight="4"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </android.support.v7.widget.Toolbar>

    <ImageView
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:id="@+id/image"
        android:layout_weight="17"
        android:layout_width="match_parent"
        android:layout_height="0dp" />

    <LinearLayout
        android:orientation="vertical"
        android:weightSum="6"
        android:layout_weight="17"
        android:layout_width="match_parent"
        android:layout_height="0dp">
<LinearLayout
    android:background="#fff"
    android:layout_marginBottom="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginLeft="16dp"
    android:layout_weight="5"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="0dp">
    <TextView
        android:textSize="20dp"
        android:textColor="#6a4de7"
        android:id="@+id/date"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp" />
    <TextView
        android:textSize="20dp"
        android:id="@+id/name"
        android:textColor="#9d89fe"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp" />
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/weather"
        android:layout_weight="1"
        android:weightSum="7"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <ImageView
            android:id="@+id/sun"
            android:layout_weight="1"
            android:background="@drawable/unclicked_sun"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <ImageView
            android:id="@+id/cloud"
            android:layout_weight="1"
            android:background="@drawable/unclicked_cloud"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <ImageView
            android:id="@+id/rain"
            android:layout_weight="1"
            android:background="@drawable/unclicked_rain"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <ImageView
            android:id="@+id/snow"
            android:layout_weight="1"
            android:background="@drawable/unclicked_snow"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
    </LinearLayout>
    <TextView
        android:textSize="20dp"
        android:textColor="#a5a5a5"
        android:id="@+id/memo"
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="0dp" />
</LinearLayout>

            <LinearLayout
                android:gravity="center"
                android:layout_weight="1"
                android:weightSum="7"
                android:orientation="horizontal"
                android:layout_gravity="bottom"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <Button
                    android:textColor="9d89fe"
                    android:background="@drawable/button"
                    android:gravity="center"
                    android:text="뒤로가기"
                    android:id="@+id/back"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
    </LinearLayout>
    <android.support.v4.widget.Space
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="0dp" />
</LinearLayout>
